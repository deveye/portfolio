<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>



    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div>
      <div><%= link_to "Homepage", root_path %></div>
      <div><%= link_to "About Me", about_me_path %></div>
      <div><%= link_to "Contact", contact_path %></div>
      <div><%= link_to "Blog", blogs_path %></div>
      <div><%= link_to "My Portfolio", portfolios_path %></div>
      <div></div>
    </div>

    <% if current_user.is_a?(User) %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path %> 
      <%= link_to "Register", new_user_registration_path %> 
    <% end %>

    <%= yield %>
    
    <% if session[:source] %>
    Thanks for visiting me from <%= session[:source] %>
    <% end %>
  </body>
</html>
