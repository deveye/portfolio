<%= image_tag @portfolio_item.main_image %>
<h2><%= @portfolio_item.title %></h2>
<em><%= @portfolio_item.subtitle %></em>
<p><%= @portfolio_item.body %></p>

<%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin)%>
<%= link_to "Delete", portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Delete portfolio item?' } if logged_in?(:site_admin)%>

<% @portfolio_item.technologies.each do |t| %>
<p><%= t.name %></p>
<% end %>
